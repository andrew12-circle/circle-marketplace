# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Turnstile (Cloudflare CAPTCHA)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Upstash Redis (for production rate limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Security Feature Flags
UNDER_ATTACK=false
CAPTCHA_ALWAYS_ON=false
POW_ENFORCE_HIGH_RISK=true
CLOSE_SIGNUPS=false
READ_ONLY_MODE=false
MAINTENANCE_MODE=false

# Proof of Work Configuration
POW_BITS=20
POW_DIFFICULTY=20

# Risk Scoring Thresholds
RISK_THRESHOLD_LOW=25
RISK_THRESHOLD_MEDIUM=50  
RISK_THRESHOLD_HIGH=75
RISK_THRESHOLD_SEVERE=90

# Action Token Secret
ACTION_TOKEN_SECRET=your-action-token-secret-change-in-production

# Admin Configuration  
ADMIN_IP_ALLOWLIST=127.0.0.1,::1
ADMIN_RATE_LIMIT_MULTIPLIER=10

# Encryption Keys (JSON array of {id, key, created})
ENCRYPTION_KEYS=[{"id":"key_001","key":"base64-encoded-key","created":"2024-01-01T00:00:00Z"}]

# Stripe (if using payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Development Settings
NODE_ENV=development